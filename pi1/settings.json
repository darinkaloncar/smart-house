    "row_pins": [25, 8, 7, 1],
    "col_pins": [12, 16, 20, 21],
    "period_s": 0.05,
    "debounce_s": 0.15,
    "runs_on": "PI1",
    "name": "DMS"
  },

  "DHT1": {
    "simulated": true,
    "pin": 4,
    "runs_on": "PI1",
    "name": "DHT1"
  },

  "DL": {
    "simulated": true,
    "pin": 17,
    "active_high": true,
    "runs_on": "PI1",
    "name": "DL"
  },

  "DB": {
    "simulated": true,
    "pin": 27,
    "active_high": true,
    "frequency": 440,
    "duty_cycle": 50,
    "runs_on": "PI1",
    "name": "DB"
  }
}