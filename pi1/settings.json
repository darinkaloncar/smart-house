{
  "device": {
    "runs_on": "PI1",
    "name": "smart-house-pi1",
    "location": "home",
    "project": "smart-house"
  },

  "mqtt": {
    "host": "localhost",
    "port": 1883,
    "base_topic": "smart-house",
    "qos": 0,
    "retain": false,

    "batch_size": 5,
    "flush_interval_sec": 2.0
  },

   "DS1": {
    "simulated": true,
    "pin": 5,
    "pull_up": true,
    "bouncetime_ms": 120,
    "runs_on": "PI1",
    "name": "DS1"
  },

  "DPIR1": {
    "simulated": true,
    "pin": 6,
    "runs_on": "PI1",
    "name": "DPIR1"
  },

  "DUS1": {
    "simulated": true,
    "trig_pin": 23,
    "echo_pin": 24,
    "period_s": 1.0,
    "timeout_s": 0.02,
    "runs_on": "PI1",
    "name": "DUS1"
  },

  "DMS": {
    "simulated": true,
    "keys": [
      ["1","2","3","A"],
      ["4","5","6","B"],
      ["7","8","9","C"],
      ["*","0","#","D"]
